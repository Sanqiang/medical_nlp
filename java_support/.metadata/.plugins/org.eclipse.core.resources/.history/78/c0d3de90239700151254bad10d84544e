package edu.pitt.medical_nlp.text;

public class Solution {
	public int myAtoi(String str) {
		str = str.trim();
		if (str.length() == 0) {
			return 0;
		}
		boolean sign = true, flagsign = false;
		int digit = 0;
		int total = 0, temp = 0;

		for (int i = 0; i < str.length(); i++) {
			if ('0' <= str.charAt(i) && str.charAt(i) <= '9') {
				digit = str.charAt(i) - '0';
			} else if (str.charAt(i) == '+' || str.charAt(i) == '-') {
				if (flagsign) {
					return 0;
				}
				sign = str.charAt(i) == '+' ? true : false;
				flagsign = true;

			} else {
				break;
			}
			temp = total * 10 + digit;
			if ((temp - digit) / 10d != total || (temp > 0 && total < 0)) {
				return sign ? Integer.MAX_VALUE : Integer.MIN_VALUE;
			} else {
				total = temp;
			}
		}
		total = total * (sign ? 1 : -1);

		return total;
	}

	public static void main(String[] args) {
		int total = new Solution().myAtoi("   -1123u3761867");
		System.out.println(total);
	}

}