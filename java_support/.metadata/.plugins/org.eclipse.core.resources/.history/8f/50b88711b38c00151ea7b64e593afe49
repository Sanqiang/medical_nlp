package edu.pitt.medical_nlp.graph;

import java.util.ArrayList;

import edu.stanford.nlp.ling.HasWord;

public class WordNode implements HasWord {

	public int idx;
	public String lemma;
	public String type;
	public String snomed_id;
	ArrayList<Edge> links = new ArrayList<>();

	public WordNode(int idx, String lemma) {
		this.idx = idx;
		this.lemma = lemma;
	}

	public WordNode(String lemma) {
		this.lemma = lemma;
		this.idx = -1;
	}

	public WordNode(String lemm, String type, String snomed_id) {
		this(lemm);
		this.snomed_id = snomed_id;
		this.type = type;
	}

	@Override
	public String word() {
		return lemma;
	}

	@Override
	public void setWord(String word) {
		this.lemma = word;
	}

	private static final long serialVersionUID = -4139502897206203482L;
}
