package edu.pitt.medical_nlp.text;

public class Solution {
	public int myAtoi(String str) {
		boolean is_overflow = false;

		str = str.trim();
		if (str.length() == 0) {
			return 0;
		}
		boolean sign = true;
		int digit = 0;
		boolean flagsign = false;
		int total = 0;

		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == '+' || str.charAt(i) == '-') {
				if (flagsign) {
					return 0;
				}
				sign = str.charAt(i) == '+' ? true : false;
				if (is_overflow) {
					return sign ? Integer.MAX_VALUE : Integer.MIN_VALUE;
				}
				flagsign = true;

			} else if ('0' <= str.charAt(i) && str.charAt(i) <= '9') {
				digit = str.charAt(i) - '0';
			} else {
				break;
			}
			int temp = total * 10 + digit;
			if ((temp - digit) / 10d != total || (temp > 0 && total < 0) || (temp < 0 && total > 0)) {
				return sign ? Integer.MAX_VALUE : Integer.MIN_VALUE;
			} else {
				total = temp;
			}
		}
		total = total * (sign ? 1 : -1);

		return total;
	}

	public static void main(String[] args) {
		int total = new Solution().myAtoi("   -1123u3761867");
		System.out.println(total);
	}

}